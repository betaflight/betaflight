# Memory regions

FLASH_ORIGIN = 0x10000000;
CONFIG_LENGTH = 64K;

MEMORY
{
    FLASH (rx)        : ORIGIN = FLASH_ORIGIN, LENGTH = PRIMARY_FLASH - 64K
    FLASH_CONFIG (r)  : ORIGIN = FLASH_ORIGIN + PRIMARY_FLASH - CONFIG_LENGTH, LENGTH = CONFIG_LENGTH
    RAM(rwx) : ORIGIN =  0x20000000, LENGTH = 512k
    SCRATCH_X(rwx) : ORIGIN = 0x20080000, LENGTH = 4k
    SCRATCH_Y(rwx) : ORIGIN = 0x20081000, LENGTH = 4k
}
